<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MovieDetailActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/appbarlayout_height"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbarDetailMovie"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="@color/colorPrimary">

            <ImageView
                android:id="@+id/imageHeaderMovieDetail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax"/>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:layout_collapseMode="pin"/>

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="@dimen/linearlayout_paddingtop_moviedetail">

            <TextView
                android:id="@+id/movieDetailsMovieTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/movietitle_textsize"
                android:text="Gustavo"
                android:paddingLeft="@dimen/movietitle_paddingleft_moviedetail"
                android:paddingRight="@dimen/movietitle_paddingright_moviedetail"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/linearlayout_paddingtop_moviedetail">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/imdb_text"
                    android:textSize="@dimen/texview_imdbrating_textsize"
                    android:textStyle="bold"
                    android:paddingLeft="@dimen/movierating_paddingleft_moviedetail"
                    android:paddingRight="@dimen/movierating_paddingright_moviedetail"/>

                <TextView
                    android:id="@+id/imdBRatingMovieDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7.7"
                    android:textSize="@dimen/texview_imdbrating_textsize"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rottentomatoes_text"
                    android:textSize="@dimen/texview_imdbrating_textsize"
                    android:textStyle="bold"
                    android:paddingLeft="@dimen/movierating_paddingleft_moviedetail"
                    android:paddingRight="@dimen/movierating_paddingright_moviedetail"/>

                <TextView
                    android:id="@+id/rottenTomatoesDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6.2"
                    android:textSize="@dimen/texview_rottentomatoes_textsize"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/linearlayout_paddingbottom_metacritic"
                android:paddingTop="@dimen/linearlayout_paddingtop_metacritic">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/metacritic_text"
                    android:textSize="@dimen/texview_imdbrating_textsize"
                    android:textStyle="bold"
                    android:paddingLeft="@dimen/movierating_paddingleft_moviedetail"
                    android:paddingRight="@dimen/movierating_paddingright_moviedetail"/>

                <TextView
                    android:id="@+id/metascoreMovieDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="70%"
                    android:textSize="@dimen/texview_rottentomatoes_textsize"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height_moviedetail"
                android:background="@android:color/darker_gray"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/plotsize"
                android:text="@string/plot"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:paddingTop="@dimen/plot_paddingtop"/>

            <TextView
                android:id="@+id/plotMovieDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/plotsize"
                android:layout_gravity="center_horizontal"
                android:paddingTop="@dimen/textview_paddingtop_plot"
                android:paddingRight="@dimen/textview_paddingright_plot"
                android:paddingLeft="@dimen/textview_paddingleft_plot" />
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>
